<div class="cover-forms d-flex justify-content-center align-items-center" style="background-image: url(<%= asset_path('https://www.wallpapertip.com/wmimgs/154-1548354_swarm-of-bats.jpg')%>)">
  <div class="container my-4">
    <div class="row justify-content-center">
      <div class="col-12 col-md-6">
        <div class="box-forms p-3">
          <h2>Log in</h2>

          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-inputs">
              <%= f.input :email,
                          required: false,
                          autofocus: true,
                          input_html: { autocomplete: "email" } %>
              <%= f.input :password,
                          required: false,
                          input_html: { autocomplete: "current-password" } %>
              <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            </div>

            <div class="form-actions">
              <%= f.button :submit, "Log in", class:"btn btn-red mb-3" %>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
