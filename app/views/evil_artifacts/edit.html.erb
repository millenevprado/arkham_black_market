<div class="cover-forms d-flex justify-content-center align-items-center">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 col-md-6">
        <div class="box-forms my-3 p-3">
  <h1>Edit an existing Evil Artifact</h1>
  <%= simple_form_for(@evil_artifact) do |f| %>
    <%= f.input :photos, as: :file, input_html: { multiple: true } %>
    <%= f.input :name %>
    <%= f.input :lethality %>
    <%= f.input :reach %>
    <%= f.input :versatility %>
    <%= f.input :description %>
    <%= f.input :category, collection: EvilArtifact::CATEGORIES %>
    <%= f.input :price %>
    <%= f.submit 'Edit' %>
  <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
