<div class="product-show-container">
  <div class="product-show-center-container">
    <h2 class="my-4"><%= "#{@evil_artifact.name}" %></h2>
    <div class="px-4">
      <% @evil_artifact.photos.each do |photo| %>
        <%= cl_image_tag photo.key, height: 350, width: 250, crop: :fill, class:"mx-4" %>
      <% end %>
    </div>
  </div>

  <div class="my-5 product-show">
    <div class="card card-product-show mx-5">
        <h5 class="card-header card-order-header"> <strong>Product Informations</strong> </h5>
        <div class="card-body card-order-body">
          <h5 class="card-title"><%= @evil_artifact.description %></h5>
          <p class="card-text"> <strong>Category:</strong> <%= @evil_artifact.category %></p>
          <p class="card-text"> <strong>Sold by:</strong> <%= @evil_artifact.user.codename %></p>
          <p class="card-text"> <strong>Price:</strong> US$ <%= @evil_artifact.price %></p>
          <p class="card-text"> <strong>Lethality:</strong> <%= @evil_artifact.lethality %><p>
          <p class="card-text">  <strong>Reach:</strong> <%= @evil_artifact.reach  %> ft<p>
          <p class="card-text"> <strong>Versatility:</strong> <%= @evil_artifact.versatility %><p>
          <%= link_to 'Buy', new_evil_artifact_order_path(@evil_artifact), class: 'btn btn-red float-right' %>
          <% if current_user == @evil_artifact.user %>
            <%= link_to 'Edit an artifact',  edit_evil_artifact_path(@evil_artifact), class: 'btn btn-red mr-3' %>
            <%= link_to 'Detete this artifact', evil_artifact_path(@evil_artifact), method: :delete, class: 'btn btn-red', data: { confirm: 'Are you sure you want to delete this item?' } %>
          <% end %>
        </div>
    </div>
  </div>
</div>
