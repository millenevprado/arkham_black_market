<div class="position-relative">
  <div class="card-category card-large" style="background-image: url(<%= asset_path('poison_cover.jpg')%>)">
  <h1 class="text-danger">POISON</h1>
</div>
<div class="container my-3">
  <div class="row justify-content-center">
    <div class="col-12 col-md-6">
      <% @evil_artifacts.each do |artifact| %>
        <div class="card-product">
          <%= artifact.photos.empty? ? (image_tag 'poison_product.jpg') : (cl_image_tag artifact.photos.first.key) %>
          <div class="card-product-infos">
            <%= link_to evil_artifact_path(artifact) do %>
              <h2><%= artifact.name %></h2>
              <p><%= "$#{artifact.price}" %><p>
              <p><%= "Sold by #{artifact.user.codename}" %><p>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

<%= link_to 'Back', evil_artifacts_path, class:'btn btn-red mt-3' %>
</div>
